@model List<ItemTable>
@{
}

<a asp-controller="Item" asp-action="Insert" class="btn btn-outline-success btn-md float-right">新增項目</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>項目名稱:</th>
            <th>創建時間</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            <td>
                @item.ItemName
            </td>
            <td>
                <span>
                    <a asp-controller="Item" asp-action="Edit" asp-route-id="@item.ItemId"   class="btn btn-outline-primary btn-sm">編輯</a>
                    <a asp-controller="Item" asp-action="Delete" asp-route-id="@item.ItemId" class="btn btn-outline-danger btn-sm">刪除</a>
                </span>
            </td>
        </tr>
        }
    </tbody>
</table>